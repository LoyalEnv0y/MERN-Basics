// This is where we configure typescript behavior.
{
	"compilerOptions": {
		// Module defines the module system being used in the project.
		// CommonJS is for the `require` and `NodeNext` is for ES6+ Modules.
		"module": "NodeNext",

		// ModuleResolution determines how TS will find the code that we import.
		// Node is for `require` and `NodeNext` is for ES6+ Modules.
		"moduleResolution": "NodeNext",

		// Target is the version of JS that the TS code will compile to.
		"target": "ES2022",

		// SourceMap maps the compiled JS code back to TS which helps out with
		// debugging.
		"sourceMap": true,

		// OutDir determines where the final JS will be compiled.
		"outDir": "dist"
	},

	// Include option tells TS where to find our code.
	"include": ["server/src/**/*"]
}
